# Application Settings
APP_NAME="PDF Form Filler"
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///./pdf_form_filler.db

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Settings (Development - console mode)
SMTP_HOST=console  # Use "console" to print emails to logs instead of sending
SMTP_PORT=1025
SMTP_FROM=noreply@pdfformfiller.local
SMTP_USE_TLS=False
SMTP_USE_SSL=False

# Application URL
APP_URL=http://localhost:8000

# Email Verification
EMAIL_VERIFICATION_EXPIRE_HOURS=24

